<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerDetails"
    android:background="#7FCCF3">

    <TextView
        android:id="@+id/details_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#000000"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/details_email"
        android:text="1"/>
    <TextView
        android:id="@+id/details_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="10dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="2"/>
    <TextView
        android:id="@+id/details_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="10dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/details_email"
        android:text="3"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/transfer_btn"
        android:layout_margin="10dp"
        android:text="TRANSFER MONEY"
        android:textSize="16sp"
        android:background="@drawable/rectangle_2"
        android:layout_alignParentBottom="true"
        android:onClick="openViewAllCustomers"/>

    <EditText
        android:id="@+id/et_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Amount in USD"
        android:layout_above="@id/transfer_btn"/>


</RelativeLayout>